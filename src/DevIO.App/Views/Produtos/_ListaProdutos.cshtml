@model IEnumerable<DevIO.App.ViewModels.ProdutoViewModel>

<table class="table table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Imagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fornecedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/Imagens/@item.Imagem" alt="@item.Imagem" style="width:70px; height:100px;">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fornecedor.Nome)
            </td>
            <td>
                @item.Valor.ToString("C")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                <a class="btn btn-info" asp-controller="Produtos" asp-action="Details" asp-route-id="@item.Id">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </a> 
                    <a class="btn btn-warning" supress-by-claim-name="Produto" supress-by-claim-value="Editar" asp-controller="Produtos" asp-action="Edit" asp-route-id="@item.Id">
                    <i class="fa-solid fa-pencil"></i>
                </a> 
                <a class="btn btn-danger" supress-by-claim-name="Produto"  supress-by-claim-value="Excluir"  asp-controller="Produtos"asp-action="Delete" asp-route-id="@item.Id">
                    <i class="fa-solid fa-trash"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
