@model DevIO.App.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Editar" + Model.Nome;
}

<h4 style="padding-top:30px;">@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="FornecedorId" />

            <div class="form-group">
                <label asp-for="FornecedorId" class="control-label"></label><br />
                <label><strong>@Model.Fornecedor.Nome</strong></label>
            </div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea cols="40" rows="5" asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Imagem Atual</label><br />
                <img src="~/Imagens/@Model.Imagem" alt="@Model.Imagem" style="width:70px; height:100px" /><br />
                <input type="hidden" asp-for="Imagem"/>
            </div>
            <div class="form-group">
                <label asp-for="ImagemUpload" class="control-label"></label>
                <div class="input-group custom-file-button">
                    <label class="input-group-text" for="ImagemUpload">Arquivo</label>
                    <input type="file" class="form-control" id="ImagemUpload" asp-for="ImagemUpload" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-default" href="javascript:window.history.back();">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


}
